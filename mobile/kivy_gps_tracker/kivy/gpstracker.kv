#: import BgStackLayout layouts.BgStackLayout
#: import BgBoxLayout layouts.BgBoxLayout

Interface:
    Screen:
        name: "SignIn"
        BgBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            padding:[dp(20),dp(20),dp(20),dp(20)]

            BoxLayout:
                orientation:'vertical'               
                size_hint: 1,0.25
                Image:       
                    source:"bkr.png"
                    size_hint_y: 0.7
                Label:
                    text:'Sign In'
                    size_hint_y: 0.3
                    font_size: '50dp'
 
            TextInput:
                id: userIdTxt
                multiline:False
                hint_text:"User Id"
                size_hint: None,None
                size_hint_x: 0.75
                height: '40dp'
                font_size:'20dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                padding : self.height/2 - self.font_size/2
            
            TextInput:
                id: passwordTxt
                multiline:False
                size_hint: None,None
                size_hint_x: 0.75
                height: '40dp'
                font_size:'20dp'
                hint_text:"Password"
                password:True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                padding : self.height/2 - self.font_size/2
 
            BoxLayout:
                orientation:'horizontal'    
                size_hint: 1,0.25
                spacing: dp(20)
                Button:
                    size_hint: None,None
                    size_hint_x: 0.5
                    height:'40dp'
                    font_size:'20dp'
                    text:'Log In'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_release: root.sign_in()                    
                Button:
                    size_hint: None,None
                    size_hint_x: 0.5
                    height:'40dp'
                    font_size:'20dp'
                    text:'Sign Up'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}               
                    on_release: root.switch_screen("Register")    

    Screen:
        name: "Register"
        BgBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            padding:[dp(20),dp(20),dp(20),dp(20)]

            BoxLayout:
                orientation:'vertical'               
                size_hint: 1,0.25
                Image:       
                    source:"bkr.png"
                    size_hint_y: 0.7
                Label:
                    text:'Sign Up'
                    size_hint_y: 0.3
                    font_size: '50dp'

            TextInput:
                id: userIdRegisterTxt
                multiline:False
                hint_text:"User Id"
                size_hint: None,None
                size_hint_x: 0.75
                height: '40dp'
                font_size:'20dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                padding : self.height/2 - self.font_size/2

            TextInput:
                id: passwordRegisterTxt
                multiline:False
                hint_text:"Password"
                size_hint: None,None
                size_hint_x: 0.75
                height: '40dp'
                font_size:'20dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                padding : self.height/2 - self.font_size/2

            BoxLayout:
                orientation:'horizontal'
                #padding:[dp(20),dp(20),dp(20),dp(20)]             
                size_hint: 1,0.25
                spacing: dp(20)
                Button:
                    size_hint: None,None
                    size_hint_x: 0.5
                    height:'40dp'
                    font_size:'20dp'
                    text:'Register'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_release: root.register()
                Button:
                    size_hint: None,None
                    size_hint_x: 0.5
                    height:'40dp'
                    font_size:'20dp'
                    text:'Cancel'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_release: root.switch_screen("SignIn")

    Screen:
        name: "Map"
        BgBoxLayout:
            orientation: "vertical"
            hex_code: "#000000" #"#1E45F3"
            alpha: 0.2
            padding:[dp(20),dp(20),dp(20),dp(20)]
            spacing: dp(20)
            ScrollView:
                id: scrollView
                size_hint: 1,0.9
                bar_width: 10
                BgBoxLayout:
                    id: boxLayout
                    orientation: "vertical"
                    size_hint_y: None
                    height:self.minimum_height
                    hex_code:"#1E45F3"
                    alpha: 0.2
            Button:
                id: locationBtn
                text: "Start Tracking..."
                size_hint: 1,0.1
                on_release: root.location_click()

<ErrorPopup@Popup>:
    message: message
    auto_dismiss: False
    title: "Response"
    size_hint: None, None
    width: grid.width + dp(25)
    height: grid.height + root.title_size + dp(48)
    GridLayout:
        id: grid
        size_hint: None, None
        size: self.minimum_size
        padding: [10, 5]
        cols: 1
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: None, None
            height: message.height
            width: max(message.width, butt.width)
            Label: 
                id: message
                size_hint: None, None
                size: self.texture_size
                padding: [10, 5]
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: None, None
            height: butt.height
            width: max(message.width, butt.width)
            Button:
                id: butt
                text: 'Close'
                size_hint: None, None
                size: self.texture_size
                padding: [10, 5]
                on_release: root.dismiss()
